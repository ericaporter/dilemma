<% if @comment.errors.present? %>
  //reload failed form
  $("#new_comment").replaceWith("<%= j(render 'form', comment: @comment) %>");
<% else %>
  $("#comment_content").val("")
  $("ul#<%= @commentable.class.name.downcase %>_comments").prepend("<%= j(render 'comment', comment: @comment) %>")
<% end %>
